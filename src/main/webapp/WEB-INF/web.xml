         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>Player</servlet-name>
        <servlet-class>com.example.battleseaweb.Player</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Player</servlet-name> <!-- То же имя, что и выше -->
        <url-pattern>/submitForm1</url-pattern> <!-- Путь, по которому будет доступен сервлет -->
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>